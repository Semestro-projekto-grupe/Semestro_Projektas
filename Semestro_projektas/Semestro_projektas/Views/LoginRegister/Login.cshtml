@model Semestro_projektas.Models.User;

@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer _localizer

@{
    ViewData["Title"] = _localizer["Prisijungimas"];
}
<style>
    body {
        background-image: url('@Url.Content("~/images/Conversations-webinar.jpg")');
                    background-position: center center fixed;
                    background-size: cover;
                    overflow-x: hidden;
                }

                dataInput {
        position: relative;
        left: 280px;
        font-weight: bolder;
    }

    .form-control {
        position: relative;
        width: 210px;
        right: 19px;
        border: 1px solid;
            background-color: white;
    }

    .col-sm-2 {
        position: relative;
        left: 60px;
    }

    .w-2 {
        position: relative;
        left: 203px;
        width: 100px;
        background-color: aqua;
    }

    .w-3 {
        width: 95px;
        left: 188px;
        background-color: aqua;
    }

    .left {
        position: relative;
        left: 295px;
    }

    .box-shadow {
        background: rgba(0, 191, 255, 0.7);
        padding: 1%;
    }

    .validation {
        position: relative;
        right: 20px;
    }

    .pull-center {
        position: absolute;
    }
    .bold {
        color: black;
        text-shadow: 1px 1px 2px black, 0 0 0px blue, 0 0 0px darkblue;
    }
</style>
<form asp-controller="LoginRegister" asp-action="Login" method="post">
    <br><br>
    <br><br>
    <nav class=" box-shadow">
        <div class="text-center">
            <h1 class="bold">@_localizer["Prisijungimas"]</h1>
            <p></p>
        </div>
        @if (TempData["Success"] != null)
        {
            <label class="pull-center" style="color:red; font-size:20px;">&#160 &#160 &#160 @TempData["Success"]</label>
        }
        <dataInput>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.LabelFor(model => model.NickName, htmlAttributes: new { @class = "col-sm-2 col-form-label caption" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NickName, new { htmlAttributes = new { @class = "form-control caption", @placeholder = _localizer.GetString("Prisijungimas") } })
                    @Html.ValidationMessageFor(model => model.NickName, "", new { @class = "text-danger validation" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password", @placeholder = _localizer.GetString("Slaptažodis") } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger validation" })
                </div>
            </div>
            <div class="row">
                <button type="submit" class="form-control col-sm-2 w-3" name="submitButton" value="Check">@_localizer["Prisijungti"]</button>S
                <button type="submit" class="form-control col-sm-2 w-2" name="submitButton" value="Regist">@_localizer["Registruotis"]</button>
            </div>
        </dataInput>
    </nav>
</form>