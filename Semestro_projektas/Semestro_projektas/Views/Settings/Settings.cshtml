@model Semestro_projektas.Models.User

@{
    ViewData["Title"] = "Index";
    string password = "", pass = "", pass2 = "";
}
    <style>
        body {
            background-image: url('@Url.Content("~/images/Conversations-webinar.jpg")');
            background-position: center center fixed;
            background-size: cover;
            overflow-x: hidden;
        }

    dataInput {
        position: relative;
        left: 280px;
        font-weight: bolder;
    }

    .form-control {
        position: relative;
        width: 210px;
        right: 19px;
        border: 1px solid;
        background-color: white;
    }

        .col-sm-2 {
            position: relative;
            left: 60px;
           // color: white;
           // text-shadow: 1px 1px 2px black, 0 0 0px blue, 0 0 0px darkblue;
        }

    .w-date {
        width: 83px;
    }

    .w-2 {
        width: 64px;
